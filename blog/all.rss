---
layout: nil
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">

<channel>
  <title>PyBossa Blog</title>
  <link>http://pybossa.com</link>
  <description>PyBossa Blog</description>
  <language>en-us</language>

  {% for post in site.categories.blog %}
  <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>http://pybossa.com{{post.url}}</link>
      <description>{{post.intro | xml_escape}}</description>
      {% for member in site.data.crew %}
      {% if member.author == post.author %}
      <author>{{member.name}} {{member.surname}}</author>
      {% endif %}
      {% endfor %}
      <pubDate>{{post.date |  date: "%Y-%M-%D"}}</pubDate>
  </item>
  {% endfor %}
</channel>
</rss> 
